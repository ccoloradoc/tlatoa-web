<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
 	 
 	 
 	 	<http auto-config="true"  use-expressions="true">
 	 		<intercept-url pattern="/kerberos/login" access="permitAll" />
 	 		<intercept-url pattern="/kerberos/*" access="hasRole('ROLE_USER')" />
			<intercept-url pattern="/**" access="hasRole('ROLE_USER')"/>
			
			<form-login login-page='/kerberos/login'
				default-target-url="/kerberos/system"
				authentication-failure-url="/kerberos/login?error=true" />
			
			<logout logout-success-url="/kerberos/login" />
			
		</http>
		
		
		
		<authentication-manager>
		  <authentication-provider>
		    <user-service>
			<user name="kerberos" password="4815162342" authorities="ROLE_USER" />
		    </user-service>
		  </authentication-provider>
		</authentication-manager>
 	  
</beans:beans>